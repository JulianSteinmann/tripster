<div class="container-fluid container">
  <div class="sidebar">
    <% if @user.photo.attached? %>
      <%= cl_image_tag @user.photo.key, crop: :fill, class: "avatar" %>
    <% else %>
      <img class="avatar" src="https://kitt.lewagon.com/placeholder/users/ssaunier">
    <% end %>
    <%= current_user.first_name %>
    <%= current_user.last_name %>
    <%= current_user.email %>

    <br>
    <% if @my_reviews.length > 0 %>
      <%  @average_review.times do %>
      <i class='fas fa-star'></i>
      <% end %>
      <%  (5 - @average_review).times do %>
      <i class='fas fa-star gray'></i>
      <% end %>
    <% end %>


    <%= link_to "Edit profile", edit_user_registration_path %>

  </div>
  <div class="content">
    <h2 class="text-center">My created trips</h2>
    <%= render 'partials/trip-cards', trips: @my_trips %>
    <br><br><br>
    <h2 class="text-center">My booked trips</h2>
    <%= render 'partials/trip-cards', trips: @booked_trips %>
    <br><br><br>
    <h2 class="text-center">My Completed trips</h2>
    <%= render 'partials/trip-cards', trips: @completed_trips %>
  </div>
</div>
