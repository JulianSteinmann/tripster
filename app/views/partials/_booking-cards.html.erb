<ul class="list-group booking-table">
  <% if @my_trips.count > 0 %>

  <li class="table-head">
    <span>Departure/Arrival</span>
    <span>Departure Time</span>
    <span>Price</span>
    <span>Driver</span>
  </li>
  <% trips.each do |trip| %>
    <%= link_to trip_path(trip) do %>
    <li class="list-group-item">
      <div >
        <span><%= trip.origin %>
          <i class="fas fa-arrow-right"></i>&nbsp;<%= trip.destination %></span>
        <span class="trip-table__date"><%= trip.departure_time.strftime '%a, %d of %b' %></span>
        <span><%= "Â£#{trip.price}"%></span>
        <span><%= trip.user.first_name %>
          <%= trip.user.last_name %>
          <img class="avatar" src="https://i2.wp.com/eikongroup.co.uk/wp-content/uploads/2017/04/Blank-avatar.png?ssl=1">
        </span>
      </div>
      <% trip.bookings.each do |booking| %>
        <%= render 'partials/booking-card-person', booking: booking %>
      <% end %>

    </li>
  <% end %>
<% end %>

<% else %>
  <%= render 'partials/link-card',  mypath: new_trip_path, message: "Create first trip"  %>
<% end %>

</ul>
