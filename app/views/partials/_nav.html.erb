<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= current_page?(action: 'home') ? "nav--home" : "" %>
" id="navbar">
  <a class="navbar-brand" href="<%= root_path %>">
    <%= image_tag "logo-v01.png", class: "nav__logo--dark" %>
    <%= image_tag "logo-v01-rev.png", class: "nav__logo--light" %>
</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="<%= root_path %>">Find Trip</a>
      </li>
      <% if user_signed_in? %>
      <li class="nav-item">
        <a class="nav-link" href="#">Create Trip</a>
      </li>
      <li class="nav-item dropdown">
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="<%= dashboard_path %>" >Dashboard</a>
          <a class="dropdown-item" href="<%= destroy_user_session_path %>" data-method="delete">Logout</a>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <a class="nav-link" href="<%= new_user_session_path %>">Login</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= new_user_registration_path %>">Sign up</a>
      </li>
      <% end %>
    </ul>
  </div>
</div>
